<div class="row">
  <div class="col-auto">
    <h2>Welcome back, {{user.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Blog?</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Blog Title:</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>
      <div class="form-group">
        <label for="project-desc">Blog Message:</label>
        <textarea
          class="form-input"
          id="blog-message"
          name="blog-message"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
